doctype html
html
	head
		title Model visualizer

		// meta
		meta(charset="utf-8")
		meta(http-equiv="X-UA-Compatible", content="IE-edge")
		meta(name="viewport", content="width=device-width, initial-scale=1")
		meta(name="description", content="dashboard for viewing model-fitting results")
		meta(name="author", content="Niru Maheswaranathan")

		// CSS
		link(rel='stylesheet', href='/lib/c3/c3.css')
		link(rel='stylesheet', href='/lib/bootstrap/dist/css/bootstrap.min.css')
		link(rel='stylesheet', href='/css/dashboard.css')
		link(rel='stylesheet', href='/css/style.css')

		// Javascript
		script(src='/lib/jquery/dist/jquery.min.js')
		script(src='/lib/d3/d3.min.js', charset='utf-8')
		script(src='/lib/c3/c3.min.js')

	body
		div.navbar.navbar-inverse.navbar-fixed-top(role="navigation")
			div.container-fluid
				div.navbar-header
					button(type="button", data-toggle="collapse", data-target=".navbar-collapse").navbar-toggle
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.navbar-brand(href="#") Model visualizer
				div.navbar-collapse.collapse
					ul.nav.navbar-nav.navbar-right
						li
							a(href="#") Dashboard
						li
							a(href="#") Settings
						li
							a(href="#") Help

		div.container-fluid
			div.row
				div.col-sm-3.col-md-2.sidebar
					ul.nav.nav-sidebar
						li.active
							a(href="#") Overview
						li
							a(href="#") Reports
						li
							a(href="#") Export
				div.col-sm-9.col-sm-offset-3.col-md-10.col-md-offset-2.main
					block content
